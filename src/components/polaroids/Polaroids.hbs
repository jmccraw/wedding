<figure class="polaroids{{#if this.classes}} {{this.classes}}{{/if}}" data-offset="{{this.offset}}">
  <img class="polaroids__image" src="{{this.src}}" alt="{{this.alt}}" width="{{this.width}}" height="{{this.height}}" loading="lazy" />
  <figcaption class="polaroids__figcaption">
    <p class="polaroids__caption">{{{this.caption}}}</p>
  </figcaption>
</figure>
